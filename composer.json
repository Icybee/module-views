{
	"name": "icybee/module-views",
	"type": "icanboogie-module",
	"description": "Allows dynamic data from modules to be displayed in content zones.",
	"keywords": [
		"view"
	],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "https://olvlvl.com/",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/Icybee/module-views/issues",
		"source": "https://github.com/Icybee/module-views"
	},
	"minimum-stability": "dev",
	"prefer-dist": true,
	"prefer-stable": true,
	"require": {
		"php": ">=5.6",
		"icanboogie/event": "^3.0",
		"icanboogie/facets": "^0.7",
		"icanboogie/module": "^4.0",
		"icybee/module-cache": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"Icybee\\Modules\\Views\\": "lib"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/Application.php"
		]
	},
	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	},
	"extra": {
		"icanboogie": {
			"config-constructor": {
				"views": "Icybee\\Modules\\Views\\Hooks::synthesize_config"
			}
		}
	}
}
